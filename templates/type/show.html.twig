{% extends 'admin/base-admin.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
<style>
h1 {
    font-size: 30px; /* Decrease font size for form title */
    color: #007bff; /* Same blue as the submit button */
    margin-bottom: 10px; /* Increase margin for spacing */
    margin-left: 20px; /* Move the h1 element to the left */
    font-family: 'Public Sans', sans-serif; /* Use Public Sans SemiBold font */
    font-weight: 600; /* SemiBold font weight */
}
 /* Style for table */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

/* Style for table header */
.table th {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
    background-color: #f2f2f2;
    font-weight: bold;
}

/* Style for table data */
.table td {
    border: 1px solid #ccc;
    padding: 10px;
}

/* Style for action links */
.action-links {
    margin-top: 20px;
}

.action-link,
.create-button {
    display: inline-block;
    padding: 4px 8px; /* Adjusted padding for smaller buttons */
    border: 1px solid #007bff;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    border-radius: 3px;
    margin-right: 10px;
    transition: all 0.3s ease;
    font-size: 12px; /* Adjusted font size for smaller buttons */
}

.action-link:hover,
.create-button:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}
</style>

<h1>Type</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ type.id }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ type.description }}</td>
        </tr>
        <tr>
            <th>Type De Couverture</th>
            <td>{{ type.typeCouverture }}</td>
        </tr>
    </tbody>
</table>

<div class="action-links">
    <a href="{{ path('app_type_index') }}" class="action-link">Back to List</a>
    <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="action-link">Edit</a>
    {{ include('type/_delete_form.html.twig') }}
</div>
{% endblock %}
