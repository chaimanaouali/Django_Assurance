{% extends 'admin/base-front.html.twig' %}

{% block title %}Contract Index{% endblock %}

{% block body %}
    <style>
        h1 {
            font-size: 24px;
            color: #0056b3;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>

    <h1>Contract Index</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>E-mail</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Type of Contract</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contrat in contrats %}
            <tr>
                <td>{{ contrat.id }}</td>
                <td>{{ contrat.nom }}</td>
                <td>{{ contrat.prenom }}</td>
                <td>{{ contrat.email }}</td>
                <td>{{ contrat.dateDebutContrat ? contrat.dateDebutContrat|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.datefinContrat ? contrat.datefinContrat|date('Y-m-d') : '' }}</td>
                <td>{{ contrat.typeCouverture }}</td>
                <td>{{ contrat.adresseAssur }}</td>
                <td>{{ contrat.numeroAssur }}</td>
                
                <td>
                    <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}">show</a>
                    <a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}">edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="10">No records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('app_contrat_new') }}">Create new</a>
{% endblock %}