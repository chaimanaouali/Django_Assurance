{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg rounded">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <h1 class="text-center mb-4">Réinitialiser mot de passe</h1>
                {{ form_start(requestForm) }}
                <div class="form-group">
                    <div class="text-center mb-3">
                        {{ form_row(requestForm.email, {
                            'label': '<i class="fas fa-envelope"></i> Email:',
                            'label_html': true,
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>
                    <small id="emailHelp" class="form-text text-muted text-center">Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
                </div>
                <br>
                <div class="text-center"> <!-- Centered button -->
                    <button type="submit" class="btn btn-success btn-block">
                        <i class="fas fa-plus-circle"></i> Réinitialiser mot de passe
                    </button>
                </div>
                        <a href="{{ path('app_login') }}" class="btn btn-secondary my-3">Retour</a>

                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

<style>
    .card {
        border: none;
    }
    
    .form-label {
        font-weight: bold;
    }
    
    .form-control {
        border-radius: 20px;
        padding: 15px;
    }
    
    .btn-success {
        border-radius: 20px;
        padding: 12px;
    }
    
    .btn-success:hover {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }
    
    .form-check-label {
        font-size: 14px;
    }
</style>

