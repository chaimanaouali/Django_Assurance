

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td> {# Display description field #}
            </tr>
            <tr>
               <th>Image</th>
<td>
     {% if post.image %}
                       <img src="{{ asset('uploads/images2.jpg') }}" alt="Uploaded Image">
                    {% else %}
                        No Image
                    {% endif %}
</td>

            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ post.dateCreation ? post.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ post.categorie }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ post.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">Back to List</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
