{% extends 'admin/base-front.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <br></br>
    <h1 style="text-align: center ;">Post</h1>

    <table class="table" style="margin: 0 auto;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ post.imageName }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ post.categorie }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>    
    </table>

    <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('app_post_front_index') }}" class="btn btn-primary">Retourner</a>
        <a href="{{ path('app_commentaire_index', {'id': post.id}) }}" class="btn btn-success">Voire Commentaire</a>
    </div>

    {{ include('post_front/_delete_form.html.twig') }}
{% endblock %}
