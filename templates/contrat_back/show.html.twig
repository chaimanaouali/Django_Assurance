{% extends 'admin/base-front.html.twig' %}

{% block title %}Contrat Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Contrat Details</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contrat.nom }}</td>
            </tr>
            <tr>
                <th>Pr√©nom</th>
                <td>{{ contrat.prenom }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ contrat.email }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ contrat.id }}</td>
            </tr>
            <tr>
                <th>Date Debut Contrat</th>
                <td>{{ contrat.dateDebutContrat ? contrat.dateDebutContrat|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Date Fin Contrat</th>
                <td>{{ contrat.datefinContrat ? contrat.datefinContrat|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Adresse Assur</th>
                <td>{{ contrat.adresseAssur }}</td>
            </tr>
            <tr>
                <th>Numero Assur</th>
                <td>{{ contrat.numeroAssur }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_contrat_back_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_contrat_back_edit', {'id': contrat.id}) }}" class="btn btn-primary">Edit</a>
        <a href="{{ path('contrat_generate_pdf', { 'id': contrat.id }) }}" class="btn btn-success">Download PDF</a>
    </div>
    
    {{ include('contrat_back/_delete_form.html.twig') }}
</div>
{% endblock %}
