{% extends 'admin/base-admin.html.twig' %}

{% block content %}
    <h1>Post index</h1>

    <!-- Dump the entire posts array to inspect its structure -->
    {{ dump(posts) }}

    <!-- Search form -->
    <form action="{{ path('app_post_index') }}" method="GET">
        <input type="text" name="searchTerm" placeholder="Search...">
        <button type="submit">Search</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>DateCreation</th>
                <th>Categorie</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre }}</td>
                <td>{{ post.description }}</td>
                <td>
                    {% if post.image %}
                        <img src="{{ asset('uploads/' ~ post.image) }}" alt="Post Image">
                    {% else %}
                        No Image
                    {% endif %}
                </td>
                <td>{{ post.dateCreation ? post.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.categorie }}</td>
                <td>{{ post.status }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}">Show</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Render pagination links -->
    <div class="pagination">
        <!-- Previous button -->
        {% if posts.hasPreviousPage %}
            <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': posts.previousPage})) }}" class="btn btn-primary">Previous</a>
        {% endif %}
        
        <!-- Numbered pages -->
        {% for page in posts.pagesInRange %}
            {% if page != posts.currentPage %}
                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': page})) }}" class="btn btn-secondary">{{ page }}</a>
            {% else %}
                <span class="btn btn-primary disabled">{{ page }}</span>
            {% endif %}
        {% endfor %}
        
        <!-- Next button -->
        {% if posts.hasNextPage %}
            <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'page': posts.nextPage})) }}" class="btn btn-primary">Next</a>
        {% endif %}
    </div>
{% endblock %}
